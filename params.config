// Define parameters used in the main Nextflow script called main.nf

params {
	// GENERAL PARAMETERS

	// Outdir paths
	annotation_folder = "APA_benchmark_tests/output/apa_annotation"
	identification_folder = "APA_benchmark_tests/output/identification_results"
	nanopore_normalization_folder = "APA_benchmark_tests/output/nanopore_normalization"
	apa_normalization_folder = "APA_benchmark_tests/output/apa_normalization"
	quantification_results_folder = "APA_benchmark_tests/output/quantification_results"
	differential_results_folder = "APA_benchmark_tests/output/differential_expression_results"

	// Rscript paths
	benchmark_rscript = "APA_benchmark_tests/bin/rscript/"
	
	// Inputs
	sample_name = ""
	apa_method = ""
	core_num = ""
	win_size = "[0, 300, 50]"
